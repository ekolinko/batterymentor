<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/powerbench_realtime_container"
        style="@style/powerbench_realtime_container"
        android:layout_above="@+id/button_battery_benchmark">
        <TextView android:id="@+id/powerbench_power_value"
            style="@style/powerbench_power_value"
            android:textColor="@color/powerbench_red"/>
    </RelativeLayout>
    <Button android:id="@+id/button_battery_benchmark"
        style="@style/powerbench_button"
        android:background="@color/powerbench_red"
        android:drawableLeft="@drawable/powerbench_charger_benchmark_white"
        android:text="@string/powerbench_charger_benchmark"/>
</RelativeLayout>