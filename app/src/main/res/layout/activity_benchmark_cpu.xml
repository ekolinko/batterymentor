<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">
    <FrameLayout android:id="@+id/content_frame"
        style="@style/activity">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/benchmark_realtime_container"
                style="@style/benchmark_realtime_container"
                android:layout_alignParentTop="true">
                <TextView android:id="@+id/benchmark_duration"
                    style="@style/benchmark_duration"
                    android:textColor="@color/powerbench_blue"/>
            </RelativeLayout>
            <RelativeLayout android:layout_below="@+id/benchmark_realtime_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_above="@+id/process_list">
                <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/divider_horizontal">
                    <TextView android:id="@+id/benchmark_cpu_text_view"
                        style="@style/benchmark_cpu_text_view"
                        android:text="@string/benchmark_in_progress"/>
                </ScrollView>
                <View android:id="@+id/divider_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/darker_gray"/>
            </RelativeLayout>
            <ListView android:id="@+id/process_list"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>
            <!--<RelativeLayout android:id="@+id/cpu_gadget_container"
                android:layout_above="@+id/button_stop"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                style="@style/cpu_gadget_container">
                <TextView android:id="@+id/gadget_title"
                    style="@style/gadget_title"
                    android:text="@string/cpu_gadget"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>-->
            <Button android:id="@+id/button_stop"
                style="@style/benchmark_button"
                android:layout_above="@+id/divider_bottom"
                android:background="@color/powerbench_blue"
                android:text="@string/stop_test"/>
            <View android:id="@+id/divider_bottom"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </FrameLayout>
    <include layout="@layout/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>