<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">
    <FrameLayout android:id="@+id/content_frame"
        style="@style/activity">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/benchmark_realtime_container"
                style="@style/benchmark_realtime_container"
                android:layout_alignParentTop="true">
                <TextView android:id="@+id/benchmark_duration"
                    style="@style/benchmark_duration"
                    android:textColor="@color/powerbench_blue"/>
            </RelativeLayout>
            <TextView android:id="@+id/benchmark_brightness_text_view"
                style="@style/benchmark_brightness_text_view"
                android:layout_below="@+id/benchmark_realtime_container"
                android:layout_above="@+id/brightness_gadget_container"
                android:text="@string/benchmark_in_progress"/>
            <LinearLayout android:id="@+id/brightness_gadget_container"
                android:layout_above="@+id/button_stop"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                style="@style/gadget_container">
                <TextView style="@style/gadget_title"
                    android:text="@string/brightness_gadget"/>
                <TextView android:id="@+id/brightness_gadget_power_value"
                    style="@style/gadget_power"
                    android:paddingBottom="5dp"/>
                <TextView style="@style/gadget_power"
                    android:paddingTop="0dp"
                    android:text="@string/battery_life_remaining"/>
                <SeekBar android:id="@+id/brightness_gadget_slider"
                    style="@style/gadget_slider"
                    android:max="255" />
                <TextView style="@style/gadget_hint"
                    android:text="@string/battery_gadget_slider_hint" />
            </LinearLayout>
            <Button android:id="@+id/button_stop"
                style="@style/benchmark_button"
                android:layout_above="@+id/divider_bottom"
                android:background="@color/powerbench_blue"
                android:text="@string/stop_benchmark"/>
            <View android:id="@+id/divider_bottom"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </FrameLayout>
    <include layout="@layout/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>